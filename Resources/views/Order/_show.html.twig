{% from 'MopaBootstrapBundle::macros.html.twig' import label, badge %}

<h1>Order details</h1>

<div class="row-fluid">
    <div class="span6">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="2">General info</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><strong>#id</strong></td>
                    <td>{{ order.id }}</td>
                </tr>
                <tr>
                    <td><strong>total</strong></td>
                    <td>{{ order.total }} &euro;</td>
                </tr>
                <tr>
                    <td><strong>items total</strong></td>
                    <td>{{ order.itemsTotal }} &euro;</td>
                </tr>
                <tr>
                    <td><strong>created at</strong></td>
                    <td>{{ order.createdAt|date }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>quantity</th>
            <th><span class="pull-right">unit price</span></th>
            <th><span class="pull-right">line total</span></th>
        </tr>
    </thead>
    <tbody>
        {% for item in order.items %}
            {% set variant = item.variant %}
            {% set product = variant.product %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ item.quantity }}</td>
                <td>
                    <span class="pull-right">
                    {{ item.unitPrice }} &euro;
                    </span>
                </td>
                <td>
                    <span class="pull-right">
                    {{ item.total }} &euro;
                    </span>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="3">
            </td>
            <td colspan="2">
                <span class="pull-right">
                <strong>Items total</strong>: {{ order.itemsTotal }} &euro;
                </span>
            </td>
        </tr>
        <tr>
            <td colspan="3">
            </td>
            <td colspan="2">
                <span class="pull-right">
                <strong>Total</strong>: {{ order.total }} &euro;
                </span>
            </td>
        </tr>
    </tbody>
</table>

<div class="well">
    <a href="{{ path('sylius_sales_order_update', {'id': order.id}) }}" class="btn">
        <i class="icon-th"></i> update
    </a>
    <a href="{{ path('sylius_sales_order_delete', {'id': order.id}) }}" class="btn btn-danger">
        <i class="icon-trash icon-white"></i> delete
    </a>
</div>
